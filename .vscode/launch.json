{
	"version": "0.1.0",
	"configurations": [
		{
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
			"args": [ "--extensionDevelopmentPath=${workspaceRoot}" ],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/out"],
			"preLaunchTask": "BuildAll"
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"address": "localhost",
			"port": 5858,
			"sourceMaps": false
		}
	]
}
